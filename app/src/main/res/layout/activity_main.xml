<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tapMe"
            android:layout_marginBottom="356dp" app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/party_time" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="150dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="149dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView" android:layout_marginTop="63dp"
            app:layout_constraintTop_toBottomOf="@+id/tapMe" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="268dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="188dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="188dp"/>

</android.support.constraint.ConstraintLayout>